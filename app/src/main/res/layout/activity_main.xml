<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre (ej. Juan Perez Gutierrez)"
        android:id="@+id/txtNombre"
        android:inputType="textPersonName"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escuela actual"
        android:id="@+id/txtEscuelaActual"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telefono celular (ej. 3117772222)"
        android:id="@+id/txtTelefono"
        android:inputType="phone"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opcion 1"
        android:textColor="#E91E63"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerCarreraUNO"
        android:entries="@array/carreras"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opcion 2"
        android:textColor="#E91E63"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerCarreraDOS"
        android:entries="@array/carreras"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e-mail (ej. laura@hotmail.com)"
        android:id="@+id/txtCorreo"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRAR"
        android:layout_marginTop="10dp"
        android:id="@+id/btnRegistrar"
        android:layout_marginBottom="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VER REGISTROS"
        android:layout_gravity="center"
        android:textColor="#009688"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="en la nube"
            android:id="@+id/btnMostrarNube"
            android:layout_weight="1"
            android:layout_margin="5dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="locales"
            android:layout_weight="1"
            android:id="@+id/btnMostrarLocales"
            android:layout_margin="5dp"
            />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESPALDAR EN LA NUBE"
        android:id="@+id/btnFirebase"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:text="Se guardara en la NUBE al detectar conexion a Internet.
                      \nAl GUARDAR en la nube se BORRAN los registros locales."
        android:textColor="#959595"
        />






</LinearLayout>